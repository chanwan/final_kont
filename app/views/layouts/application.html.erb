<!DOCTYPE html>
<html>
<head>
  <title>FinalKont</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Library', books_path, class: 'navbar-brand' %>
        <!-- <a class="navbar-brand" href="#">Library</a> -->
      </div>
      <% if user_signed_in? %>
      <form class="navbar-form navbar-left form-margin">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <!-- Изменить на руби таг -->
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <% end %>
      <% unless user_signed_in? %>
      <ul class="nav navbar-nav navbar-right"> 
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary devise-button' %>
        <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary devise-button right' %>
        <% else %>
        <div class="user-nav">
        <p>Hello <%= current_user.email %></p>
        <%= link_to 'Add new book', new_book_path %> |
        <%= link_to 'Add new author', new_author_path %>
        </div>
      </ul>
      <% end %>
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<%= yield %>
</body>
</html>
